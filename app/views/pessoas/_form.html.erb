<%= form_with(model: pessoa, id: "pessoa_form", data: { turbo_frame: "_top" }) do |form| %>
  <% if pessoa.errors.any? %>
    <div id="error_explanation" class="bg-red-100 rounded-md p-4 mb-4">
      <h2><%= pluralize(pessoa.errors.count, "error") %> prohibited this pessoa from being saved:</h2>

      <ul>
        <% pessoa.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :nome, class: "text-sm font-medium text-gray-800 mb-1 block" %>
    <%= form.text_field :nome, class: "border border-gray-300 rounded-sm w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :cpf, class: "text-sm font-medium text-gray-800 mb-1 block" %>
    <%= form.text_field :cpf, class: "border border-gray-300 rounded-sm w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :mae, class: "text-sm font-medium text-gray-800 mb-1 block" %>
    <%= form.text_field :mae, class: "border border-gray-300 rounded-sm w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :nascimento, class: "text-sm font-medium text-gray-800 mb-1 block" %>
    <%= form.date_field :nascimento, class: "border border-gray-300 rounded-sm w-full" %>
  </div>

  <div class="flex items-center">
    <%= form.submit class: "cursor-pointer inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mr-4" %>
    <% if @pessoa.persisted? %>
      <%= link_to 'Cancel', @pessoa %>
    <% end %>
  </div>
<% end %>
