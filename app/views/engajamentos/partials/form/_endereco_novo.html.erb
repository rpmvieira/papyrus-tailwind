<div class="flex items-center justify-between w-full p-5 text-left border border-gray-200  focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-800 bg-gray-100 dark:bg-gray-800 text-black-900 dark:text-white">
	<p class="text-md text-black-400 hover:text-sky-400"><b><%= pessoa.nome %></b><br><small>Adicionar endereco</small></p>
</div>
<div class="items-center justify-between w-full p-2 border border-gray-200 text-sm text-left text-black-500 dark:text-black-400">
	<%= form_with(model: @endereco, url: engajamento_engajado_endereco_create_path(@engajamento,@engajado), data: { turbo_frame: "_top" }) do |form| %>
	<div class="" id="flash"></div>

	<div class="p-2">
		<%= form.label :logradouro, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
		<%= form.text_field :logradouro, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", value: rand(10000000000..99999999999) %>
	</div>

	<div class="p-2">
		<%= form.label :bairro, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
		<%= form.text_field :bairro, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", value: rand(10000000000..99999999999) %>
	</div>
	<div class="p-2">
		<%= form.label :numero, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
		<%= form.text_field :numero, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", value: rand(10000000000..99999999999) %>
	</div>
	<div class="p-2">
		<%= form.label :municipio_id, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
		<%#= form.collection_select :municipio_id, Municipio.order(:nome), :id, :nome %>
		<select name="endereco[municipio_id]" id="endereco_municipio_id" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
			<option value="2">Amapa</option>
			<option value="3">Calcoene</option>
			<option value="15">Cutias</option>
			<option value="4">Ferreira Gomes</option>
			<option value="14">Itaubal</option>
			<option value="5">Laranjal Do Jari</option>
			<option value="6">Macapa</option>
			<option value="7">Mazagao</option>
			<option value="1">Não informado</option>
			<option value="8">Oiapoque</option>
			<option value="16">Pedra Branca do Amapari</option>
			<option value="9">Porto Grande</option>
			<option value="13">Pracuuba</option>
			<option value="11">Santana</option>
			<option value="10">Serra Do Navio</option>
			<option value="12">Tartarugalzinho</option>
			<option value="17">Vitoria Do Jari</option>
		</select>
	</div>

	<div class="p-2">
		<% if @pessoa.enderecos.exists? %>
		<%= form.label "Principal?", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
		<div class="flex items-center mb-4">
			<div>
				<%= form.radio_button :principal, true, checked: true %>
				<%= form.label "Sim", class: "ml-3 text-sm font-medium text-gray-900 dark:text-gray-300" %>
			</div>
			<div class="px-6">
				<%= form.radio_button :principal, class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600", value: false %>
				<%= form.label "Não", class: "ml-3 text-sm font-medium text-gray-900 dark:text-gray-300" %>
			</div>
		</div>
		<% else %>
		<%= form.hidden_field :principal, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", value: true %>
		<% end %>
	</div>

	<%= form.hidden_field :status, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", value: "ativo" %>

	<div class="flex items-center p-2 border-t">
		<%= form.submit "Registrar", class: "cursor-pointer inline-flex items-center text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-xs px-4 py-1.5 text-center mr-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-600 dark:focus:ring-blue-800" %>
		<%# if @pessoa.persisted? %>
		<%#= link_to 'LIMPA FLOW', engajamento %>
		<%# end %>
	</div>
	<% end %>
</div>